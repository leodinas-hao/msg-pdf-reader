  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "jest test current file",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "${fileBasename}",
        "--verbose",
        "--runInBand",
        "--no-cache",
        "--testTimeout=600000"
      ],
      "console": "integratedTerminal"
    }
  ]
}